<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/viewPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout android:id="@+id/viewImagem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <ImageView android:id="@+id/imgFoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:padding="50dp"
                android:gravity="center"
                android:layout_centerInParent="true">

                <TextView android:id="@+id/Titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome Fruta"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@color/transparent" />


                <TextView android:id="@+id/Descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="preÃ§o"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/transparent"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <Button android:id="@+id/btnCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/viewPrincipal"
        android:layout_alignBottom="@id/viewPrincipal"
        android:layout_alignRight="@id/viewPrincipal"
        android:layout_alignLeft="@id/viewPrincipal"
        android:background="@color/transparent"/>

</RelativeLayout>